{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "BUILD WITH CLANG COMPILER",
			"command": "clang++",
			"args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${workspaceFolder}\\Unknown.exe", // make the .exe file from Root
				"${workspaceFolder}\\src\\TextureManager.cpp",
				"-IC:\\C++Libraries\\SDL2-2.28.5\\x86_64-w64-mingw32\\include\\SDL2",
				"-LC:\\C++Libraries\\SDL2-2.28.5\\x86_64-w64-mingw32\\lib", 
				"-IC:\\C++Libraries\\SDL2_image-2.8.2\\x86_64-w64-mingw32\\include\\SDL2",
				"-LC:\\C++Libraries\\SDL2_image-2.8.2\\x86_64-w64-mingw32\\lib",
				"-IC:\\C++Libraries\\SDL2_ttf-2.22.0\\x86_64-w64-mingw32\\include\\SDL2",
				"-LC:\\C++Libraries\\SDL2_ttf-2.22.0\\x86_64-w64-mingw32\\lib",
				"-IC:\\C++Libraries\\SDL2_mixer-2.8.0\\x86_64-w64-mingw32\\include\\SDL2",
				"-LC:\\C++Libraries\\SDL2_mixer-2.8.0\\x86_64-w64-mingw32\\lib",
				"-lSDL2",
				"-lSDL2_image",
				"-lSDL2_ttf",
				"-lSDL2_mixer"
			],
			"options": {
				"cwd": "${workspaceFolder}" // make the .exe file from Root
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: clang++"
		},
